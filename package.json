{
  "name": "image-maker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^4.2.2",
    "@reduxjs/toolkit": "^1.2.5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-color": "^3.0.4",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.5",
    "antd": "^4.6.2",
    "axios": "^0.20.0",
    "lodash": "^4.17.20",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-color": "^2.18.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "react-use": "^15.3.4",
    "redux-undo": "^1.0.1",
    "resize-observer-polyfill": "^1.5.1",
    "typescript": "~3.8.2"
  },
  "scripts": {
    "start": "npm run start:prod",
    "start:mock": "react-app-rewired start --proxy=MOCK",
    "start:local": "react-app-rewired start --proxy=LOCAL",
    "start:prod": "react-app-rewired start --proxy=PROD",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "format": "prettier --write src/",
    "deploy": "sh scripts/deploy.sh",
    "analyze": "cra-bundle-analyzer",
    "commit": "cz"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/lodash": "^4.14.165",
    "commitizen": "^4.2.2",
    "cra-bundle-analyzer": "^0.1.0",
    "cz-conventional-changelog": "3.3.0",
    "http-proxy-middleware": "^1.0.6",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "prettier": "2.2.0",
    "react-app-rewired": "^2.1.6",
    "source-map-explorer": "^2.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test -- --watchAll=false",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,tsx,scss,css}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
